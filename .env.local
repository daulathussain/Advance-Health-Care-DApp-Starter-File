
# ============================================
# WALLET CONNECT & RAINBOWKIT CONFIGURATION
# ============================================

# WalletConnect Project ID (Required for RainbowKit)
# Get this from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# ============================================
# BLOCKCHAIN NETWORK CONFIGURATION
# ============================================

# Smart Contract Address (Deploy your contract and update this)
NEXT_PUBLIC_CONTRACT_ADDRESS=


NEXT_PUBLIC_RPC_URL=https://rpc.ankr.com/holesky/API_KEY_HERE

# Chain ID for your network
NEXT_PUBLIC_CHAIN_ID=1337

# Chain Name
NEXT_PUBLIC_CHAIN_NAME=localhosy

# Native Currency Symbol
NEXT_PUBLIC_CHAIN_SYMBOL=ETH

# Block Explorer URL
# Polygon: https://polygonscan.com
# Ethereum: https://etherscan.io
NEXT_PUBLIC_BLOCK_EXPLORER=https://etherscan.io
# ============================================
# IPFS CONFIGURATION (PINATA)
# ============================================

# Pinata JWT Token for IPFS uploads
# Get this from: https://app.pinata.cloud/keys
NEXT_PUBLIC_PINATA_JWT=


# Pinata Gateway URL for IPFS retrieval
# Default: https://gateway.pinata.cloud
# You can also use your dedicated gateway: https://your-gateway.mypinata.cloud
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud

# Optional: Pinata API Key (if using API key instead of JWT)
# PINATA_API_KEY=your_pinata_api_key_here
# PINATA_SECRET_API_KEY=your_pinata_secret_key_here

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Platform Name (displayed in UI)
NEXT_PUBLIC_PLATFORM_NAME=HealthChain

# Application Environment
NEXT_PUBLIC_ENVIRONMENT=development

# Application Version
NEXT_PUBLIC_APP_VERSION=1.0.0



# Enable debug mode for development
NEXT_PUBLIC_DEBUG_MODE=true

# Gas price settings (in gwei)
NEXT_PUBLIC_DEFAULT_GAS_PRICE=30

# Transaction timeout (in milliseconds)
NEXT_PUBLIC_TX_TIMEOUT=300000

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Enable/disable certain features in production
NEXT_PUBLIC_ENABLE_TESTNETS=true

# Rate limiting for API calls
NEXT_PUBLIC_API_RATE_LIMIT=100



